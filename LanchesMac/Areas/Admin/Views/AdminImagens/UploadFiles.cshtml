@{
    ViewData["Title"] = "UploadFiles";
}



@*<hr/>*@

<div class="jumbotron">
    <div class="container">
        @if (ViewData["Erro"] != null)
        {
            <img src="~/images/upload-error.png" width="150" hheight="150" />
            <h4>@ViewData["Erro"]</h4>
        }
    </div>

    <div class="container">
        @if (ViewData["Resultado"] != null)
        {
            <img src="~/images/upload-sucess.png" width="200" height="150" />
            <h4>@ViewData["Resultado"]</h4>
            <hr/>
            @if (ViewBag.Arquivos != null)
            {
                @foreach (string arquivo in ViewBag.Arquivos)
                {
                    <li>@arquivo</li>
                }
            }
        }
    </div>

</div>