@model FileManagerModel
@{
    ViewBag.Title = "Arquivos";
}

@if(Model.Files !=null) 
{
    <h3>Imagens</h3>
    <hr />
    var caminho = Model.PathImagensProduto;
    <div class="row">
        @foreach(FileInfo file in Model.Files)
        {
            <div class="column" style="float:left;">
                <img src="~/@caminho/@file.Name" width="125" height="125" />
                <div style="padding:10px; text-align:left">
                    <a href="@Url.Action("DeleteFile","AdminImagens", new { fname=file.Name })">Excluir</a>
                </div>
            </div>

        }
    </div>
}